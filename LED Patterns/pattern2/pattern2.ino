void lightFrame(int frame[125]) {
  for (int i = 0; i < 50; i++) {
    for (int l = 0; l < 5; l++) {
     
      int k = 0;
      for (int j = l * 5; j < 125; j += 25) {
        for (int r = 0; r < 5; r++) {
          if (frame[j + r] == 1) {
            digitalWrite(bulbs[k], HIGH);
          } else {
            digitalWrite(bulbs[k], LOW);
          }
          k++;
        }
      } 
      digitalWrite(layers[l], HIGH);
      delay(1);
      digitalWrite(layers[l], LOW);
    }
  }    
}



